{
  "productName": "aoe2companion",
  "directories": {
    "output": "release/"
  },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
  "win": {
    "icon": "build/icon.ico",
    "target": [
      "portable"
    ],
    "certificateFile" : "certificate.pfx",
    "signAndEditExecutable": true,
    "forceCodeSigning": true
  },
  "forceCodeSigning": true,
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ],
    "cscLink": "certificate.p12",
    "forceCodeSigning": true
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
