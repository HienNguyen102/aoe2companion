{
  "productName": "aoe2companion",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "publish": {
    "provider": "github",
    "releaseType": "release",
    "vPrefixedTagName": true,
    "publisherName": ["aoe2companion.com", "DigiCert Timestamp 2021"]
  },
  "win": {
    "icon": "build/icon.ico",
    "target": [
      "nsis"
    ],
    "certificateFile": "certificate.pfx",
    "signAndEditExecutable": true,
    "forceCodeSigning": true,
    "verifyUpdateCodeSignature": false,
    "artifactName": "${productName}-${version}.${ext}",
    "publisherName": ["aoe2companion.com", "DigiCert Timestamp 2021"]
  },
  "forceCodeSigning": true,
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ],
    "cscLink": "certificate.p12",
    "forceCodeSigning": true,
    "artifactName": "${productName}-${version}.${ext}"
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
